<preference name="android-build-tool" value="gradle" />
  <preference name="phonegap-version" value="cli-5.2.0" />
  <preference name="android-minSdkVersion" value="15" />             
  <preference name="android-targetSdkVersion" value="15" /> 
  <preference name="android-installLocation" value="auto" /> 
  


<preference name="orientation" value="portrait" />


    <icon src="res/icon/ios/icon.png" gap:platform="ios" width="57" height="57"/>
<icon src="res/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72"/>
<icon src="res/icon/ios/icon-76.png" gap:platform="ios" width="76" height="76"/>
<icon src="res/icon/ios/icon-60-2x.png" gap:platform="ios" width="120" height="120"/>
<icon src="res/icon/ios/icon-76-2x.png" gap:platform="ios" width="152" height="152"/>

<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    
    <icon src="res/icon/android/icon-72-hdpi.png"/>

    <splash src="res/screen/android/screen-hdpi-portrait.png" density="land-hdpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" density="land-ldpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" density="land-mdpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" density="land-xhdpi"/>

    <splash src="res/screen/android/screen-hdpi-portrait.png" density="port-hdpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" density="port-ldpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" density="port-mdpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" density="port-xhdpi"/>
</platform>



<platform name="ios">

    <splash src="res/screen/ios/splash_320_480" width="320" height="480"/>
    <splash src="res/screen/ios/splash_640_960.png" width="640" height="960"/>
    <splash src="res/screen/ios/splash_640_1136.png" width="640" height="1136"/>
    <splash src="res/screen/ios/splash_750_1334.png" width="750" height="1334"/>
   <splash src="res/screen/ios/splash_768_1024.png" width="768" height="1024"/>
    <splash src="res/screen/ios/splash_1024_768.png" width="1024" height="768"/>

     <splash src="res/screen/ios/splash_1242_2208.png" width="1242" height="2208"/>

    <splash src="res/screen/ios/splash_1536_2048.png" width="1536" height="2048"/>

